{% extends 'blitz/_utilities/diagnostics/layouts/base' %}

{% set page = craft.blitz.diagnostics.getPage() %}
{% if page is null %}
    {% redirect 'utilities/blitz-diagnostics' %}
{% endif %}

{% set crumbs = [
    {
        label: 'Tracked Pages',
        path: 'pages',
    },
    {
        label: page.uri,
        path: (isLeaf ?? false) ? null : 'pages/page?pageId=' ~ page.id,
        class: (isLeaf ?? false) ? 'leaf code' : 'code',
    },
]|merge(crumbs ?? []) %}

