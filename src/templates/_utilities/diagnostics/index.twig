{% do sprig.setConfig({ requestClass: 'busy' }) %}
{% set showSiteMenu = showSiteMenu ?? true %}

<div class="blitz-diagnostics-header flex">
    <h1>{{ 'Tracked Pages'|t('blitz') }}</h1>
    {% if craft.app.getIsMultiSite() %}
        {% include '_elements/sitemenu' with {
            selectedSiteId: siteId,
            urlFormat: 'utilities/blitz-diagnostics?siteId={id}&site={handle}',
        } only %}
    {% endif %}
</div>

{{ sprig('blitz/_utilities/diagnostics/components/pages', { siteId: siteId }) }}
