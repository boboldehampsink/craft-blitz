{% set orderBy = orderBy ?? 'count' %}
{% set sortBy = sortBy ?? 'desc' %}

{% set query = craft.blitz.diagnostics.getElementsQuery(id)
    .orderBy({ (orderBy): (sortBy == 'desc' ? SORT_DESC : SORT_ASC) }) %}

{% set total = query.count() %}
{% set elementTypes = query.asArray().all() %}

{{ hiddenInput('orderBy', orderBy) }}
{{ hiddenInput('sortBy', sortBy) }}

<h1 style="margin-top: 40px;">
    {{ elementTypes|length ? 'Tracked Elements'|t('blitz') : 'No Tracked Elements'|t('blitz') }}
</h1>

<div s-replace="#results" s-indicator="#results">
    <div id="results" class="elements" style="margin-top: 1rem;">
        <div class="update-spinner spinner spinner-absolute"></div>
        <table class="data fullwidth">
            <thead>
                <tr>
                    <th class="{{ orderBy == 'type' ? 'ordered' }} {{ sortBy == 'desc' ? 'desc' }} orderable">
                        <button type="button" sprig s-val:order-by="type" s-val:sort-by="{{ orderBy == 'type' and sortBy == 'asc' ? 'desc' : 'asc' }}">
                            {{ 'Element Type'|t('blitz') }}
                        </button>
                    </th>
                    <th class="{{ orderBy == 'count' ? 'ordered' }} {{ sortBy == 'desc' ? 'desc' }} orderable">
                        <button type="button" sprig s-val:order-by="count" s-val:sort-by="{{ orderBy == 'count' and sortBy == 'asc' ? 'desc' : 'asc' }}">
                            {{ 'Elements'|t('blitz') }}
                        </button>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for elementType in elementTypes %}
                    <tr>
                        <td>
                            {{ elementType.type }}
                        </td>
                        <td>
                            {{ elementType.count }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="centeralign hidden">
            <div class="spinner loadingmore"></div>
        </div>
    </div>
</div>
